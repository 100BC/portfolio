{
  // Stylelint
  "stylelint.validate": ["css", "postcss", "scss", "svelte"],
  "stylelint.packageManager": "pnpm",
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },

  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  // ESLint
  "eslint.validate": ["javascript", "typescript", "svelte"],

  // Code Spell Checker
  "cSpell.words": [
    "msapplication",
    "noindex",
    "pnpm",
    "preconnect",
    "stylelint",
    "sveltekit"
  ],
  "cSpell.ignorePaths": [
    "node_modules",
    ".vscode",
    ".prettierignore",
    ".prettierrc.json",
    ".stylelintrc.json",
    "package.json",
    "next.config.js",
    ".env.local",
    "pnpm-lock.yaml",
    "package-lock.json",
    "yarn.lock"
  ],

  // Peacock
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ff2e93",
    "activityBar.activeBorder": "#2a1816",
    "activityBar.background": "#ff2e93",
    "activityBar.foreground": "#000000",
    "activityBar.inactiveForeground": "#36363699",
    "activityBarBadge.background": "#6cdf00",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#fa0079",
    "titleBar.activeForeground": "#000000",
    "titleBar.inactiveBackground": "#fa007999",
    "titleBar.inactiveForeground": "#36363699",
    "sash.hoverBorder": "#ff2e93",
    "commandCenter.border": "#36363699"
  },
  "peacock.color": "#fa0079"
}
